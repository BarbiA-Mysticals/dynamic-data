<form action="">
{{#each data.fields}}
  <div class="mb-3">
    <label for="{{this.name}}" class="form-label">{{this.value}}</label>
    <input type="{{this.type}}" name="{{this.name}}" id="{{this.name}}" class="form-control">
    
  </div>
{{/each}}
 <button type="submit" class="btn btn-primary">Checkout</button>
 </form>
